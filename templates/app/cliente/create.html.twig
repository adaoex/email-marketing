{% extends '@layout/default.html.twig' %}

{% block title %}
    Cadastro de Cliente - {{ parent() }}
{% endblock %}

{% block page_header %}
    Cadastro de Cliente
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/app.cliente.js" ></script>
{% endblock %}

{% block content %}
    
    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Incluir') %}
    
    {% set nome = form.get('cliente').get('nome') %}
    {% do nome.setAttribute('class','form-control') %}

    {% set email = form.get('cliente').get('email') %}
    {% do email.setAttribute('class','form-control') %}

    {% set cpf = form.get('cliente').get('cpf') %}
    {% do cpf.setAttribute('class','form-control') %}
    
    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Incluir') %}
    
    {% do form.prepare() %}
    
    <div class="row" >
        <div class="col-md-8">
            <div class="box box-primary" >
                <div class="box-body" >
                    
                    {{ form().openTag(form) | raw }}
                    {% include '@app/cliente/_form.html.twig' %}
                    
                    <div class="box-footer" >
                        <button value="" class="btn btn-primary" id="submit" type="submit">
                            <i class="fa fa-save" ></i>
                            Incluir
                        </button>
                    </div>
                    {{ form().closeTag() | raw }}
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}