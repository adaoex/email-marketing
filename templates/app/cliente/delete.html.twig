{% extends '@layout/default.html.twig' %}

{% block title %}
    Edição de Cliente - {{ parent() }}
{% endblock %}

{% block page_header %}
    Edição de Cliente {{ cliente.nome }}
{% endblock %}

{% block content %}
    <div class="row" >
        <div class="col-md-8">
            <div class="box box-danger" >
                <div class="box-body" >
                    <form name="form_disable" >
                        <fieldset disabled >
                            <div class="box-body" >
                                <div class="form-group">
                                    <label for="nome">Nome: </label>
                                    <input type="text" name="nome" value="{{ cliente.nome }}" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="cpf">CPF: </label>
                                    <input type="text" name="cpf" value="{{ cliente.cpf }}" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail: </label>
                                    <input type="email" name="email" value="{{ cliente.email }}" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                    
                    <form name="form" role="form" method="post" action="{{ url('cliente.delete', {id: cliente.id}) }}" >
                        <input type="hidden" name="_method" value="DELETE" />
                        <div class="box-footer" >
                            <button class="btn btn-danger" type="submit" >
                                <i class="glyphicon glyphicon-floppy-save" ></i>
                                Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}