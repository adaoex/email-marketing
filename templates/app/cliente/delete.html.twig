{% extends '@layout/default.html.twig' %}

{% block title %}
    Remoção de Cliente - {{ parent() }}
{% endblock %}

{% block page_header %}
    Remoção de Cliente
{% endblock %}

{% block content %}
    
    {% do form.setAttribute('action',url('cliente.delete', {id: form.get('cliente').getObject().id })) %}
    
    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Incluir') %}
    
    {% set nome = form.get('cliente').get('nome') %}
    {% do nome.setAttribute('class','form-control') %}

    {% set email = form.get('cliente').get('email') %}
    {% do email.setAttribute('class','form-control') %}

    {% set cpf = form.get('cliente').get('cpf') %}
    {% do cpf.setAttribute('class','form-control') %}
    
    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Incluir') %}
    
    {% do form.prepare() %}
    
    <div class="row" >
        <div class="col-md-8">
            <div class="box box-primary" >
                <div class="box-body" >
                    
                    {{ form().openTag(form) | raw }}
                    <fieldset disabled >
                    {{ formHidden( form.get('_method')) }}
                    {% include '@app/cliente/_form.html.twig' %}
                    </fieldset>
                    {{ form().closeTag() | raw }}
                    
                    <form name="form" role="form" method="post" 
                          action="{{ url('cliente.delete', {id: form.getObject().id}) }}" >
                        <input type="hidden" name="_method" value="DELETE" />
                        <div class="box-footer" >
                            <button class="btn btn-danger" type="submit" >
                                <i class="glyphicon glyphicon-floppy-save" ></i>
                                Excluir
                            </button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}