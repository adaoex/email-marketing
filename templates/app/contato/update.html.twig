{% extends '@layout/default.html.twig' %}

{% block title %}
    Edição de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
    Edição do Contato - {{ contato.nome }}
{% endblock %}

{% block content %}
    <div class="row" >
        <div class="col-md-8">
            <div class="box box-primary" >
                <div class="box-body" >
                    <form name="form" role="form" method="post" action="{{ url('contato.update', {id: contato.id}) }}" >
                        <input type="hidden" name="_method" value="PUT" />
                        <div class="box-body" >
                            <div class="form-group">
                                <label for="nome">Nome: </label>
                                <input type="text" name="nome" value="{{ contato.nome }}" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="email">E-mail: </label>
                                <input type="email" name="email" value="{{ contato.email }}" class="form-control" />
                            </div>
                        </div>
                        <div class="box-footer" >
                            <button class="btn btn-primary" type="submit" >
                                <i class="glyphicon glyphicon-floppy-save" ></i>
                                Editar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}