{% extends '@layout/default.html.twig' %}

{% block title %}
    Cadastro de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
    Cadastro de Contato
{% endblock %}

{% block content %}
    
    {% do form.setAttribute('action',url('contato.update', {id: form.getObject().id })) %}
    
    {% set nome = form.get('nome') %}
    {% do nome.setAttribute('class','form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class','form-control') %}
    
    {% set tags = form.get('tags') %}
    {% do tags.setAttribute('class','form-control') %}
    
    {% do form.prepare() %}
    
    <div class="row" >
        <div class="col-md-8">
            <div class="box box-primary" >
                <div class="box-body" >
                    {{ form().openTag(form) | raw }}
                    {{ formHidden( form.get('_method')) }}
                    {% include '@app/contato/_form.html.twig' %}
                    <div class="box-footer" >
                        <button value="" class="btn btn-primary" id="submit" type="submit">
                            <i class="fa fa-save" ></i>
                            Alterar
                        </button>
                    </div>
                    {{ form().closeTag() | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}